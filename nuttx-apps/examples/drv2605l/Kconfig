#
# For a description of the syntax of this configuration file,
# see the file kconfig-language.txt in the NuttX tools repository.
#

config EXAMPLES_DRV2605L
	tristate "DRV2605L haptic driver example"
	default n
	depends on FF_DRV2605L
	---help---
		Enable the DRV2605L example

if EXAMPLES_DRV2605L

config EXAMPLES_DRV2605L_PROGNAME
	string "Program name"
	default "drv2605l"
	---help---
		This is the name of the program that will be used when the NSH ELF
		program is installed.

config EXAMPLES_DRV2605L_PRIORITY
	int "DRV2605L task priority"
	default 100

config EXAMPLES_DRV2605L_STACKSIZE
	int "DRV2605L stack size"
	default DEFAULT_TASK_STACKSIZE

endif
